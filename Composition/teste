
    action drop() {
        mark_to_drop();
    }

    action simple_forward(egressSpec_t port){
        standard_metadata.egress_spec = port;
    }


    table eth_exact{
        key = {
            hdr.ethernet.srcAddr:exact;
        }
        actions={
             simple_forward();
             NoAction;
             drop;
        }
        size = 1024;
        default_action = NoAction();
    }

    apply {
	   eth_exact.apply();
    }